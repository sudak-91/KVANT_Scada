        <Button x:Name="btnDriverStart" Content="Cтарт" HorizontalAlignment="Left" Height="34" Margin="42,75,0,0" VerticalAlignment="Top" Width="80" Click="btnDriverStart_Click"/>
        <Button x:Name="btnDriverStop" Content="Cтоп" HorizontalAlignment="Left" Height="34" Margin="42,120,0,0" VerticalAlignment="Top" Width="80" Click="btnDriverStop_Click"/>
        <Button x:Name="Remote_Control" Content="Восстановить связь" HorizontalAlignment="Left" Height="32" Margin="184,100,0,0" VerticalAlignment="Top" Width="126" IsDefault="True" Click="Remote_Control_Click"/>
        <Button x:Name="Remote_Control_Rev" Content="Подтвердить связь" HorizontalAlignment="Left" Height="32" Margin="183,136,0,0" VerticalAlignment="Top" Width="126" IsDefault="True" Click="Remote_Control_Rev_Click"/>

    </Grid>
</Window>
